
@{
    Layout = null;
}
@using Models
@model List<DishesBook>


<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
    <meta charset="utf-8" />
    <title> 网站后台管理</title>
    <meta name="viewport" content="width=device-width" />
    <link href="../../../../Areas/WebHotelManage/Css/ManageLayout.css" rel="stylesheet" />
    <script src="~/ThirdFile/My97DatePicker/WdatePicker.js"></script>
</head>
<body>
    <div id="container">
        <div id="top">
        </div>
        <div id="nav">
            <div id="navlink">
                <ul>
                    <li><a href="/WebHotelManage/SysAdmin/AdminMain">首页</a></li>
                    <li><a href="/Dishes/Index">添加菜品</a></li>
                    <li><a href="/Dishes/DishesManager">菜品管理</a></li>
                    <li><a href="/WebHotelManage/News/NewsPublish">发布新闻</a></li>
                    <li><a href="/WebHotelManage/News/NewsManager">新闻管理</a></li>
                    <li><a href="/DishesBook/DishesBook">预订管理</a></li>
                    <li><a href="/WebHotelManage/Company/SuggestionManager">投诉管理</a></li>
                    <li><a href="/Recruitment/Index">发布招聘</a></li>
                    <li><a href="/Recruitment/RecruitmentManager">招聘管理</a></li>
                    <li><a class="navLast" href="/WebHotelManage/SysAdmin/ExitSys">退出系统</a></li>
                </ul>
            </div>
        </div>
        <div id="content">
            <div class="itemdiv">
                <div class="book-title">
                    酒店名称
                </div>
                <div class="book-title">
                    消费时间
                </div>
                <div class="book-title">
                    消费人数
                </div>
                <div class="book-title">
                    包间类型
                </div>
                <div class="book-title">
                    客户姓名
                </div>
                <div class="book-title">
                    联系电话
                </div>
                <div class="book-title" style="width: 152px;">
                    操作
                </div>
                @{ 
                    foreach (var temp in Model) {
                <div class="book-title">
                    @temp.HotelName
                </div>
                <div class="book-title">
                    <input id="ConsumeTime" name="ConsumeTime" class="Wdate" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',readOnly:true});" value="@temp.ConsumeTime.Value.ToString("yyyy-MM-dd HH:mm:ss")" style="border:none" />
                </div>
                <div class="book-title">
                    @temp.ConsumePersons 人
                </div>
                <div class="book-title">
                    @temp.RoomType
                </div>
                <div class="book-title">
                    @temp.CustomerName
                </div>
                <div class="book-title">
                    @temp.CustomerPhone
                </div>
                <div class="book-title" style="width: 152px;">
                    <a href='ModifyBook?OrderStatus=1&BookId=@temp.BookId'>通过</a>
                    <a href='ModifyBook?OrderStatus=0&BookId=@temp.BookId'>撤销</a>
                    <a href='DeleteDishesBook?&BookId=@temp.BookId' onclick='if(confirm("确定要删除吗?")==false) return false;'>删除</a>
                </div>
                <div class="bookdetail">
                    <div class="book-Time">
                        预定时间： <input id="BookTime" name="BookTime" class="Wdate" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',readOnly:true});" value="@temp.BookTime.Value.ToString("yyyy-MM-dd HH:mm:ss")" style="border:none" />
                    </div>
                    <div class="book-Time">
                        电子邮件：@temp.CustomerEmail
                    </div>
                    <div class="book-Time">
                        预定状态：@temp.OrderStatus  &nbsp;（0：未审核&nbsp;1：审核通过）
                    </div>
                    <div class="book-comment">
                        预定其他要求：@temp.Comments
                    </div>
                </div>  
                        }
                    }
            </div>
        </div>
        <div id="footer">
            <div id="bq">
                <a target="_blank" href="/Company/Index">[网站首页]</a>&nbsp;&nbsp;版权所有 Copyright(C)2010-2020
                好运来酒店&nbsp;&nbsp;&nbsp;[当前用户:]
            </div>
        </div>
    </div>
</body>
</html>

